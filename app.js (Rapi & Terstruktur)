// ANALISA
const analisaToday = `
• Kegiatan berlangsung kondusif dan terstruktur  
• Fokus hari ini: peningkatan tajwid & kelancaran bacaan  
• Evaluasi: mayoritas anggota menunjukkan perkembangan baik  
• Rencana selanjutnya: latihan intensif murojaah dan praktik bacaan  
`;

// RENDER ANGGOTA
const anggotaList = document.getElementById("anggota-list");
anggota.forEach(n => {
    const card = document.createElement("div");
    card.className = "card";
    card.textContent = n;
    anggotaList.appendChild(card);
});

// RENDER STRUKTUR
const strukturList = document.getElementById("struktur-list");
struktur.forEach(s => {
    const card = document.createElement("div");
    card.className = "card";
    card.textContent = s;
    strukturList.appendChild(card);
});

// ANALISA
document.getElementById("analisa-text").innerText = analisaToday;
